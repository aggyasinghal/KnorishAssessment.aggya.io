
@{
    ViewBag.Title = "Boat Rental";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body  style="height:100%">
    <h3> Rent/Post your Boat online</h3>
    <div style="height:50%; text-align:center">
        <button id="RentoutBtn" onclick="RentYourBoat();"> Rent out your boat</button>
    </div>
    <hr />
    <div style="height:50%; text-align:center">
        <button id="GetBoatbtn" onclick="GetYourBoat();">  get boat per hourly</button>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script type="text/javascript">
        function RentYourBoat() {
            location.href = '@Url.Action("RentingYourBoat","Home")';
            //location.href = '@Url.Action("LoginStart", "Login")';
        }
        function GetYourBoat() {
            location.href = '@Url.Action("GetBoatOnRent", "Home")';
            //location.href = '@Url.Action("LoginStart", "Login")';
        }
    </script>
</body>
</html>



